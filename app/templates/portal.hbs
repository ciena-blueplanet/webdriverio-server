<div class="container">
    <div class='main'>
        <div class='title'>
            Admin Portal
        </div>
        <div class='username_form'>
            {{frost-bunsen-form
              bunsenModel=portalModel
              bunsenView=portalView
              disabled=isFormDisabled
              onChange=(action "formChange")
              onValidation=(action "formValidation")
            }}
        </div>
        <div class='bar'>
          <div class='link'>
            {{frost-button
              disabled=(or isFormDisabled isFormInvalid)
              onClick=(action "createUser")
              priority="secondary"
              size="medium"
              text="Create User"
            }}
          </div>
          <div class='link'>
            {{frost-button
              disabled=(or isFormDisabled isFormInvalid)
              onClick=(action "updateUserInfo")
              priority="secondary"
              size="medium"
              text="Update User"
            }}
          </div>
          <div class='link'>
            {{frost-button
              disabled=(or isFormDisabled isFormInvalid)
              onClick=(action "getUserInfo")
              priority="secondary"
              size="medium"
              text="Get User"
            }}
          </div>
          <div class='link'>
            {{frost-button
              disabled=(or isFormDisabled isFormInvalid)
              onClick=(action "deleteUser")
              priority="secondary"
              size="medium"
              text="Delete User"
            }}
          </div>
      </div>
      <div class='result'>
      </div>
    </div>
    <div class='footer'>
        <span class='bar'>
            <span class='link'>
              {{#frost-link 'login'
                priority='secondary'
                size='medium'
              }}
              Log out
              {{/frost-link}}
            </span>
        </span>
    </div>
</div>
