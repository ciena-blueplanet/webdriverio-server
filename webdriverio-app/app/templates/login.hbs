<div class="container">
    <div class='main'>
      <div class='login'>
          <img src='./images/login_image.png'>
            {{frost-bunsen-form
            bunsenModel=loginModel
            bunsenView=loginView
            disabled=isFormDisabled
            onChange=(action "formChange")
            onValidation=(action "formValidation")
            }}
            {{frost-button
            disabled=(or isFormDisabled isFormInvalid)
            onClick=(action "submitForm")
            priority="primary"
            size="medium"
            text="Sign Up"
            }}
      </div>
    </div>
    <div class='footer'>
        <span class='ciena-image-filler'>
        </span>
        <span class='footer-bar'>
            <span class='link'>
                {{#frost-link 'index'
                priority='secondary'
                size='small'
                tab-index='-1'}}
                Sign Up
                {{/frost-link}}
            </span>
            <span class='link'>
                <a href='https://www.github.com/ciena-blueplanet/webdriverio-server'>
                    <div class='content'>
                        Interested in Contributing?
                    </div>
                </a>
            </span>
        </span>
        <span class='footer-image'>
            <img src="./images/ciena_logo.png">
        </span>
    </div>
</div>
